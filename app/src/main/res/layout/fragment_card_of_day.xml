<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardOfDayFragment"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/rubashkaOfDayCard"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:src="@drawable/rubashka"
        ></ImageView>
    <ImageView
        android:id="@+id/DayCard"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:src="@drawable/rubashka"
        ></ImageView>
    <TextView
        android:id="@+id/textViewNameCardDay"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:gravity="center|top"
        android:layout_marginTop="250dp"
        android:textSize="20dp"
        ></TextView>
    <FrameLayout
        android:id="@+id/frameCardOdFay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        >
        <TextView
            android:id="@+id/textViewCardOfDay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"


            android:layout_marginBottom="90dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:gravity="center|top"
            android:textAlignment="center"
            android:textSize="15dp"

            >
        </TextView>

    </FrameLayout>
    <Button
        android:id="@+id/buttonOk"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Вернуться"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button"
        >

    </Button>

</FrameLayout>